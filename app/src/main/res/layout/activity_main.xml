<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/move_to_another_page"
        android:id="@+id/btnLoadImage"
        android:onClick="moveToAnotherPage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".2"/>
    <ImageView
        android:id="@+id/img1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:src="@drawable/img_placeholder"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toBottomOf="@+id/guideBottom"
        app:layout_constraintEnd_toEndOf="@+id/guideRight1"
        app:layout_constraintStart_toStartOf="@+id/guideLeft1"
        app:layout_constraintTop_toTopOf="@+id/guideTop"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/img1"
        app:layout_constraintStart_toStartOf="@+id/img1"
        app:layout_constraintEnd_toEndOf="@+id/img1"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/use_rxjava"/>
    <ImageView
        android:id="@+id/img2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:src="@drawable/img_placeholder"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toBottomOf="@+id/guideBottom"
        app:layout_constraintEnd_toEndOf="@+id/guideRight2"
        app:layout_constraintStart_toStartOf="@+id/guideLeft2"
        app:layout_constraintTop_toTopOf="@+id/guideTop"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/img2"
        app:layout_constraintStart_toStartOf="@+id/img2"
        app:layout_constraintEnd_toEndOf="@+id/img2"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/doesn_t_use_rxjava"/>
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/guideTop"
        app:layout_constraintGuide_percent=".4"/>
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/guideBottom"
        app:layout_constraintGuide_percent=".6"/>
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/guideLeft1"
        app:layout_constraintGuide_percent=".15"/>
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/guideRight1"
        app:layout_constraintGuide_percent=".42"/>
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/guideLeft2"
        app:layout_constraintGuide_percent=".58"/>
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/guideRight2"
        app:layout_constraintGuide_percent=".85"/>
</android.support.constraint.ConstraintLayout>